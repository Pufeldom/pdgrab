<yml_catalog>
    <shop>
        <offers>
{% for item in site.items %}{% if item.youla and item.active and item.image %}
            <offer id="{{ item.slug }}">
                <price>{{ item.price }}</price>
                <oldprice>0</oldprice>
                <premium_price>0</premium_price>
                <outlets>
                    <outlet instock="0"></outlet>
                </outlets>
            </offer>
{% endif %}{% endfor %}
        </offers>
    </shop>
</yml_catalog>
