---
permalink: /out/ozon.xml
---
<yml_catalog>
    <shop>
        <offers>
{% for item in site.items %}{% if item.ozon and item.active and item.image %}{% capture devnull %}
    {% assign surcharge_ozon = item.price | times:site.data.ozon.fee | divided_by:100.0 | plus:site.data.ozon.processing | plus:site.data.ozon.highway | plus:site.data.ozon.the_last_mile | plus:site.data.ozon.return_of_goods | plus:site.data.ozon.packaging | plus:site.data.ozon.delivery %}
    {% assign ratio = 1 | times:100.0 | minus:item.discount | divided_by:100.0 %}
    {% assign old_price_ozon = surcharge_ozon | devived_by:ratio | plus:item.price | round:0%}
    {% assign discounted_price_ozon1 = old_price_ozon | times:ratio | round:0 %}
    {% assign discounted_price_ozon2 = discounted_price_ozon1 | times:0.945 | round:0 %}
    {% if item.stock or item.ozon %}{% assign stock_ozon = 1 %}{% else assign stock_ozon = 0 %}{% endif %}
{% endcapture %}{% assign devnull = nil %}
            <offer id="{{ item.slug }}">
                <price>{{ discounted_price_ozon1 }}</price>
                <oldprice>{{ old_price_ozon }}</oldprice>
                <premium_price>{{ discounted_price_ozon2 }}</premium_price>
                <outlets>
                    <outlet instock="stock_ozon"></outlet>
                </outlets>
            </offer>
{% endif %}{% endfor %}
        </offers>
    </shop>
</yml_catalog>
